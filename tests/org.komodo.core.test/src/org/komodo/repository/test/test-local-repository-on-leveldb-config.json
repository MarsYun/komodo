{
    "name" : "Komodo Local Repository",
    "jndiName" : "jcr/KomodoLocalRepository",
    "monitoring" : {
        "enabled" : true
    },
    "node-types" :
    [
        "config/xmi.cnd",
        "config/med.cnd",
        "config/mmcore.cnd",
        "config/vdb.cnd",
        "config/TeiidSql.cnd",
        "config/komodo.cnd"
    ],
    "workspaces" : {
        "default" : "komodoLocalWorkspace",
        "allowCreation" : true
    },
    "storage" : {
        "cacheConfiguration" : "org/komodo/repository/test/infinispan-leveldb-cachestore-config.xml",
        "cacheName" : "Test Repository",
        "binaryStorage" : {
            "minimumBinarySizeInBytes" : 4096,
            "minimumStringSize" : 4096,
            "directory": "target/content/binaries",
            "type" : "file"
        }
    },
    "query" : {
        "enabled" : true,
        "textExtracting": {
            "threadPool" : "test",
            "extractors" : {
                "tikaExtractor":{
                    "name" : "General content-based extractor",
                    "classname" : "tika",
                }
            }
        },
        "indexStorage" : {
            "type" : "filesystem",
            "location" : "${java.io.tmpdir}/TestLocalLevelDBRepoPersistence/indexes",
            "lockingStrategy" : "native",
            "fileSystemAccessType" : "auto"
        },
        "indexing" : {
            "threadPool" : "modeshape-workers",
            "analyzer" : "org.apache.lucene.analysis.standard.StandardAnalyzer",
            "similarity" : "org.apache.lucene.search.DefaultSimilarity",
            "batchSize" : -1,
            "indexFormat" : "LUCENE_35",
            "readerStrategy" : "shared",
            "mode" : "sync",
            "backend" : {
                "type" : "lucene",
            },
            "hibernate.search.custom.overridden.property" : "value",
        }
    },
    "sequencing" : {
        "removeDerivedContentWithOriginal" : true,
        "threadPool" : "modeshape-workers",
        "sequencers" : {
            "DDL Sequencer" : {
                "classname" : "org.komodo.modeshape.lib.sequencer.KDdlSequencer"
            },
            "Teiid SQL Sequencer" : {
                "classname" : "org.komodo.modeshape.teiid.TeiidSqlSequencer"
            }
        }
    }
}
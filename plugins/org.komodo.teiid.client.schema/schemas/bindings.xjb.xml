<bindings xmlns="http://java.sun.com/xml/ns/jaxb" xmlns:xsi="http://www.w3.org/2000/10/XMLSchema-instance"
    xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:annox="http://annox.dev.java.net" xmlns:xjc="http://java.sun.com/xml/ns/jaxb/xjc"
    xsi:schemaLocation="http://java.sun.com/xml/ns/jaxb http://java.sun.com/xml/ns/jaxb/bindingschema_2_0.xsd"
    extensionBindingPrefixes="xjc annox" version="2.1">

    <globalBindings localScoping="toplevel" />
    <bindings schemaLocation="teiid-vdb.xsd" version="1.0">
        <!-- Customise the package name -->
        <schemaBindings>
            <package name="org.komodo.teiid.client.schema" />
        </schemaBindings>

        <!-- rename the value attribute -->
        <bindings node="//xs:complexType[@name='property']">
            <bindings node=".//xs:attribute[@name='value']">
                <property name="valueAttribute" />
            </bindings>
        </bindings>

    </bindings>
</bindings>
<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.komodo</groupId>
		<artifactId>komodo-parent</artifactId>
		<version>0.0.4-SNAPSHOT</version>
		<relativePath>../komodo-parent/pom.xml</relativePath>
	</parent>

	<artifactId>komodo-plugins</artifactId>
	<packaging>pom</packaging>
	<name>Komodo Dynamic Plugins</name>
	<description>Bundles that can be loaded into Komodo using its OSGI extension framework</description>

	<modules>
		<module>komodo-plugin-teiid-framework</module>
		<module>teiid-8.12</module>
		<module>komodo-plugin-service</module>
	</modules>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.komodo.plugins.teiid</groupId>
				<artifactId>teiid-8.12</artifactId>
				<version>${project.version}</version>
			</dependency>

			<dependency>
				<groupId>org.komodo</groupId>
				<artifactId>komodo-utils</artifactId>
				<version>${project.version}</version>
				<type>test-jar</type>
				<scope>test</scope>
			</dependency>

			<dependency>
				<groupId>org.komodo.plugins</groupId>
				<artifactId>komodo-plugin-teiid-framework</artifactId>
				<version>${project.version}</version>
				<type>test-jar</type>
				<scope>test</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<profiles>
		<profile>
			<id>generate-teiid</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-enforcer-plugin</artifactId>
						<executions>
							<execution>
								<id>enforce-teiid-version-properties</id>
								<goals>
									<goal>enforce</goal>
								</goals>
								<configuration>
									<rules>
										<requireProperty>
											<property>required-teiid-version</property>
											<message>
												The 'required-teiid-version' property is missing. Rerun using -D required-teiid-version=x.x.x
											</message>
										</requireProperty>
									</rules>
								</configuration>
							</execution>
						</executions>
					</plugin>

					<!-- Generate a teiid implementation from the template -->
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>generate-teiid</id>
								<phase>generate-sources</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<property name="compile_classpath" refid="maven.compile.classpath" />
										<property name="destination.dir" value="${project.basedir}" />
										<property name="teiid.version" value="${required-teiid-version}" />
										<ant antfile="${project.basedir}/generate-teiid.xml" target="generate-teiid" />
									</tasks>
								</configuration>
							</execution>
						</executions>
						<dependencies>
							<dependency>
								<groupId>ant-contrib</groupId>
								<artifactId>ant-contrib</artifactId>
								<version>1.0b3</version>
								<exclusions>
									<exclusion>
										<groupId>ant</groupId>
										<artifactId>ant</artifactId>
									</exclusion>
								</exclusions>
							</dependency>
						</dependencies>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
